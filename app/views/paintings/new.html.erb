<h1>New Painting Form for <%= @gallery.name %></h1>
<%= notice %>

<%= form_for [@gallery, @painting] do |f| %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :year %>
    <%= f.text_field :year %>
  </div>

  <div>
    <%= f.label :artist %>
    <%= f.text_field :artist %>
  </div>


  <div>
    <%= f.submit(value="Add Painting") %>
  </div>

<% end %>
